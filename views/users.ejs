<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <% if(extra){ %>
        <link rel="stylesheet" href="../style.css">
    <% }else{ %>
        <link rel="stylesheet" href="style.css">
        <% } %>
    <title>Users - FOODOOR</title>
</head>
<body class="black-gradient">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">FOODOOR - ADMIN PANEL</a>
            <div class="buttons d-flex gap-4">
                <form action="/admin">
                    <button type="submit" class="btn btn-outline-success">Admin Panel</button>
                </form>
                <form action="/all-orders">
                    <button type="submit" class="btn btn-outline-info">All orders</button>
                </form>
                <form action="/api/logout" method="POST">
                    <button type="submit" class="btn btn-outline-danger">Logout</button>
                </form>
            </div>
        </div>
    </nav>
    <div class="info container d-flex justify-content-center align-items-center w-100 m-0 flex-wrap gap-4 mx-auto">   
        <% users.forEach(user =>{ %>
            <div class="card w-100 p-5 bg-secondary bg-opacity-10 blur-card text-success">
                <div class="title text-center">
                    <div class="h1 fw-bolder">User #<%= user.id %></div>
                    <div class="h4">User ID : <%= user.username %> </div>
                    <div class="h4">Email : <%= user.email %></div>
                    <div class="h4">Role : <%= user.user_role %></div>
                    <div class="h4">Contact no. : "<%= user.mobile_number %>"</div>
                </div>
                <form action="/api/delete-user/<%= user.id %>" method="POST">
                    <button type="submit" class="btn btn-outline-danger">Delete</button>
                    <a href="/edit-user/<%= user.id %>" class="btn btn-outline-info ">Edit</a>
                </form>
            </div>
        <% }); %> 
    </div>
</body>
</html>