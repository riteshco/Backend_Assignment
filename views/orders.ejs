<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <title>Orders - FOODOOR</title>
</head>
<body class="warm-gradient">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">FOODOOR</a>
            <div class="buttons d-flex gap-4">
                <form action="/home">
                    <button type="submit" class="btn btn-outline-primary">Home</button>
                </form>
                <form action="/categories">
                    <button type="submit" class="btn btn-outline-warning">Categories Section</button>
                </form>
                <form action="/payment">
                    <button type="submit" class="btn btn-outline-success">Payment</button>
                </form>
                <form action="/api/logout" method="POST">
                    <button type="submit" class="btn btn-outline-danger">Logout</button>
                </form>
            </div>
        </div>
    </nav>
    <div class="orders">
        <% for(let i=0; i< orders.length; ++i){ %>
            <div class="card w-100 p-5 bg-secondary bg-opacity-10 blur-card">
                <div>
                   Order id: <%= orders[i].id %>
                </div>
                <div>
                <div>
                    Product Name: <%= productNames[i]%>
                </div>
                </div>
                <% if(orders[i].current_status === "delivered"){ %>
                <div>
                    Order status : <span class="text-success fw-bolder"><%= orders[i].current_status %></span>
                </div>
                <% }else{ %>
                <div>
                    Order status : <span class="text-danger fw-bolder"><%= orders[i].current_status %></span>
                </div>
                <% }; %>
                <div>
                    Instructions : <%= orders[i].instructions %>
                </div>
                <form action="/api/delete-order/<%= orders[i].id %>" method="POST">
                    <button type="submit" class="btn btn-danger">Delete this order!</button>
                </form>
            </div>
        <% }%>
    </div>
</body>
</html>