<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <title>Payment - FOODOOR</title>
</head>
<body class="warm-gradient">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">FOODOOR</a>
            <div class="buttons d-flex gap-4">
                <form action="/home">
                    <button type="submit" class="btn btn-outline-primary">Home</button>
                </form>
                <form action="/api/logout" method="POST">
                    <button type="submit" class="btn btn-outline-danger">Logout</button>
                </form>
            </div>
        </div>
    </nav>
    <div class="h1 fw-bolder text-center mt-5">Payments</div>
    <div class="text-primary h5 fw-bolder text-center">Your payments will show up after your order   has been approved by admin!</div>
    <div class="payments container d-flex flex-column p-5 row-gap-4">
        <% payments.forEach( payment =>{ %>
            <div class="card card w-80 p-5 bg-secondary bg-opacity-10 blur-card">
                <div>
                    Payment #<%= payment.id %>
                </div>
                <div>
                    Order - ID : <%= payment.order_id %>
                </div>
                <div>
                    Total Amount : â‚¹<%= payment.Total_amount %>
                </div>
                <% if(payment.payment_status === "pending"){ %>
                <div>
                    Payment status : <span class="text-danger fw-bolder"><%= payment.payment_status %></span>
                </div>
                <form action="/payment-done/<%= payment.id %>" method="POST">
                    <button type="submit" class="btn btn-success">
                        Mark Payment as done!
                    </button>
                </form>
                <% } else { %>
                <div>
                    Payment status : <span class="text-success fw-bolder"><%= payment.payment_status %></span>
                </div>
                <% } %>
            </div>
        <% }) %>
    </div>
</body>
</html>