<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <title>Payment - FOODOOR</title>
</head>
<body class="warm-gradient">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">FOODOOR</a>
            <div class="buttons d-flex gap-4">
                <form action="/home">
                    <button type="submit" class="btn btn-outline-primary">Home</button>
                </form>
                <form action="/categories">
                    <button type="submit" class="btn btn-outline-warning">Categories Section</button>
                </form>
                <form action="/orders">
                    <button type="submit" class="btn btn-outline-info">Your Orders</button>
                </form>
                <form action="/api/logout" method="POST">
                    <button type="submit" class="btn btn-outline-danger">Logout</button>
                </form>
            </div>
        </div>
    </nav>
    <div class="payments container d-flex flex-column p-5 row-gap-4">
        <% let i = 1; %>
        <% payments.forEach( payment =>{ %>
            <div class="card card w-80 p-5 bg-secondary bg-opacity-10 blur-card">
                <div>
                    Payment #<%= i %>
                </div>
                <div>
                    Order - ID : <%= payment.order_id %>
                </div>
                <div>
                    Total Amount : â‚¹<%= payment.Total_amount %>
                </div>
                <div>
                    Payment status : <%= payment.payment_status %>
                </div>
            </div>
        <% i++; %>
        <% }) %>
    </div>
</body>
</html>