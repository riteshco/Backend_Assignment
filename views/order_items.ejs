<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../../style.css">
    <title>Orders - FOODOOR</title>
</head>
<body class="warm-gradient">
    <%- include('partials/navbar') %>
    <% if (orderItems.length > 0){ %>
    <div class="h1 fw-bolder text-center mt-5">
        Order # <%= orderId %>!
    </div>
    <div class="order-items d-flex flex-column align-items-center justify-content-center w-100 m-0 flex-wrap gap-4 mx-auto mt-5">
        <% orderItems.forEach(item => { %>
            <div class="card w-100 p-5 bg-secondary bg-opacity-10 blur-card container row-gap-2">
                <div>
                    Item ID: <%= item.id %>
                </div>
                <div>
                    Product Name: <% for(let j=0; j < products.length; j++){ if (products[j].id === item.product_id){ %><%= products[j].product_name %><% }} %>
                </div>
                <div>
                    Quantity: <%= item.quantity %>
                </div>
            </div>
        <% }); %>
    </div>
    <% } else { %>
    <div class="h1 fw-bolder text-center mt-5">
        No items found for Order # <%= orderId %>!
    </div>
    <% } %>
</body>
</html>