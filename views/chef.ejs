<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <title>Chef Home - FOODOOR</title>
</head>
<body class="warm-gradient">
    <%- include('partials/navbar') %>
    <div class="order-list container d-flex justify-content-center align-items-center w-100 m-0 flex-wrap gap-4 mx-auto">
        <% if(orders.length !==0 && payments.length !== 0){ %>
            <div class="h1 fw-bolder">Orders!</div>
        <% let i=0; %>
        <% orders.forEach(order =>{ %>
            <% if (order.current_status === "accepted") { %>
            <div class="card w-100 p-5 bg-secondary bg-opacity-10 blur-card row-gap-2">
                <div>
                    Order-id : <%= order.id %>
                </div>
                <div>
                    Customer-id: <%= order.customer_id %>
                </div>
                <div>
                    Table Number : <%= order.table_number %>
                </div>
                <div>
                    Specific Instructions : <%= order.instructions %>
                </div>
                <div>
                    STATUS : <span class="fw-bolder border border-3 border-primary rounded"> <%= order.current_status %> </span>
                </div>
                <div>
                    Payment Status : <span class="fw-bolder border border-3 border-primary rounded"> <%= payments[i].payment_status %> </span>
                </div>
                <div>
                    <form action="/api/order-done/<%= order.id %>" method="POST">
                        <% if(order.current_status === "delivered"){ %>
                        <a class="btn btn-secondary">Delivered!</a>
                        <% }else if (payments[i].payment_status === "completed") { %>
                        <button type="submit" class="btn btn-success">Mark as Done!</button>
                        <% } %>   
                    </form>
                </div>
            </div>
        <% i++; %>
        <% } %>
        <% }) %>
        <% let j=0; %>
        <% orders.forEach(order =>{ %>
            <% if (order.current_status === "pending") { %>
            <div class="card w-100 p-5 bg-secondary bg-opacity-10 blur-card row-gap-2">
                <div>
                    Order-id : <%= order.id %>
                </div>
                <div>
                    Customer-id: <%= order.customer_id %>
                </div>
                <div>
                    Table Number : <%= order.table_number %>
                </div>
                <div>
                    Specific Instructions : <%= order.instructions %>
                </div>
                <div>
                    STATUS : <span class="fw-bolder border border-3 border-primary rounded"> <%= order.current_status %> </span>
                </div>
                <div>
                    Payment Status : <span class="fw-bolder border border-3 border-primary rounded"> <%= payments[j].payment_status %> </span>
                </div>
                <div>
                    <form action="/api/order-done/<%= order.id %>" method="POST">
                        <% if(order.current_status === "delivered"){ %>
                        <a class="btn btn-secondary">Delivered!</a>
                        <% }else if (payments[j].payment_status === "completed") { %>
                        <button type="submit" class="btn btn-success">Mark as Done!</button>
                        <% } %>   
                    </form>
                </div>
            </div>
        <% j++; %>
        <% } %>
        <% }) %>
        <% let k=0; %>
        <% orders.forEach(order =>{ %>
            <% if (order.current_status === "delivered") { %>
            <div class="card w-100 p-5 bg-secondary bg-opacity-10 blur-card row-gap-2">
                <div>
                    Order-id : <%= order.id %>
                </div>
                <div>
                    Customer-id: <%= order.customer_id %>
                </div>
                <div>
                    Table Number : <%= order.table_number %>
                </div>
                <div>
                    Specific Instructions : <%= order.instructions %>
                </div>
                <div>
                    STATUS : <span class="fw-bolder border border-3 border-primary rounded"> <%= order.current_status %> </span>
                </div>
                <div>
                    Payment Status : <span class="fw-bolder border border-3 border-primary rounded"> <%= payments[k].payment_status %> </span>
                </div>
                <div>
                    <form action="/api/order-done/<%= order.id %>" method="POST">
                        <% if(order.current_status === "delivered"){ %>
                        <a class="btn btn-secondary">Delivered!</a>
                        <% }else if (payments[k].payment_status === "completed") { %>
                        <button type="submit" class="btn btn-success">Mark as Done!</button>
                        <% } %>   
                    </form>
                </div>
            </div>
        <% k++; %>
        <% } %>
        <% }) %>
        <% } else { %>
            <div class="h2 fw-bolder">No Orders Yet!</div>
        <% } %>
    </div>
</body>
</html>